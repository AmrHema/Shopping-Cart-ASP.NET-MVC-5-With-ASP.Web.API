@model IEnumerable<Chart_Leader.Models.Categories>

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>

@if (Request.IsAuthenticated && User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cat_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cat_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cat_Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cat_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cat_Description)
            </td>
            <td>
                @Html.Image(item.Cat_Image, item.Cat_id + "", new { @class = "img-thumbnail imgProduct img-reponsive center-block hvr-bounce-in ", style = "height:150px; width:150px" })

            </td>
            <td>
                @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Cat_id }) @Html.Raw(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.Cat_id }) @Html.Raw(" | ")
                }
                @Html.ActionLink("Details", "Details", new { id = item.Cat_id })

            </td>
        </tr>
    }

</table>
