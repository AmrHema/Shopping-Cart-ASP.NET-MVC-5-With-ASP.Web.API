@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
    if (User.IsInRole("admin"))

    {
        Response.Redirect("/Admin/Admin/Dashboard");

    }
    else if (User.IsInRole("admin"))

    {
        Response.Redirect("/Users/Home/Index");

    }
}

else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/Register"><span class="fa fa-user-o"></span> Register</a></li>
        <li><a href="/Account/Login"><span class="fa fa-user-o"></span> Login</a></li>
    </ul>
}
