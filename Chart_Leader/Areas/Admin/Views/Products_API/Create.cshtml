@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            function GetCategorys() {
                $.ajax({
                    type: "GET",
                    url: "http://localhost:60000/api/Categories",
                    dataType: "json",
                    success: function (data) {
                        $.each(data, function (i, categ) {
                            //$("#CategoryID").append("<option value=" + categ.Cat_id + ">" + categ.Cat_Name + "</option>");
                            $("#CategoryID").append($('<option />', { value: categ.Cat_id, text: categ.Cat_Name }));
                        });
                    },
                    Error: function () { alert("Failed")}
                });
            };
            GetCategorys();
           
        });
    </script>


