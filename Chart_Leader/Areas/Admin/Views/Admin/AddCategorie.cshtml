@model Chart_Leader.Models.CategoriesViewModel

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- /.container-fluid -->

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard", "Admin",new { area = "Admin"})">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Add Categorie</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Categories Details
            <a href="@Url.Action("Create", "Categories",new { area = ""})" class="btn btn-primary pull-right" style="color:#ffffff"><i class="fas fa-plus-circle"></i> Add New</a>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("AddCategorie", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))//data-resetUrl
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.Cat_id, new { @class = "form-control", placeholder = "Enter Cat_Description", required = "required", autofocus = "autofocus", autocomplete = "off" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cat_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Cat_Description", required = "required", autofocus = "autofocus", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Cat_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cat_Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Cat_Description", required = "required", autofocus = "autofocus", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Cat_Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Cat_Image, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            @*@Html.EditorFor(model => model.Cat_Image,new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Cat_Description", required = "required", autofocus = "autofocus" } })*@
                                @Html.ValidationMessageFor(model => model.Cat_Image, "", new { @class = "text-danger" })
                            <div>
                                <img src="~/Common/Images/uploade.jpg" alter="Image" style="margin:10px" height="200" width="200" id="imagePreview" />
                                <input type="file" name="ImageUpload" accept="image/jpeg, image/png" onchange="ShowImagePreview(this,document.getElementById('imagePreview'))" />
                                @Html.ValidationMessage("Cat_Image", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a onclick="window.history.back();" class="btn btn-danger">Cancel</a>
                                <input type="submit" class="btn btn-primary" value="Save" />
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>


